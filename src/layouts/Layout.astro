---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=FiraCode" />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="h-screen flex justify-center items-center bg-gradient-to-tr from-indigo-700 to-blue-300 px-4 dark:from-stone-400 dark:to-violet-800">
    <slot />
  </body>
</html>
